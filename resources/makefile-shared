OUTPUT=lib$(LIB_NAME).so
CC=$(STANDALONE_PATH)/bin/clang
CXX=$(STANDALONE_PATH)/bin/clang++
SYSROOT=$(STANDALONE_PATH)/sysroot
CFLAGS+=-march=armv5te --sysroot $(SYSROOT) -I$(SYSROOT)/usr/include -I${MY_FRAMEWORKS_PATH}/frameworks -I${MY_FRAMEWORKS_PATH}/libraries -I${MY_FRAMEWORKS_PATH}/resources/include -I$(ANDROID_SOURCE_PATH)/frameworks/base/include -I$(ANDROID_SOURCE_PATH)/system/core/include -I$(ANDROID_SOURCE_PATH)/hardware/libhardware/include
LD=$(STANDALONE_PATH)/bin/clang++

#LDFLAGS+=-v -Wl,--no-undefined -L${MY_FRAMEWORKS_PATH}/libs -lgcc -gcc-toolchain /Users/amr.aboelela/develop/adt/ndk/toolchains/arm-linux-androideabi-4.8/prebuilt/darwin-x86_64 -no-canonical-prefixes -target armv5te-none-linux-androideabi -Wl,-z,noexecstack -Wl,-z,relro -Wl,-z,now

LDFLAGS+=-v -L${MY_FRAMEWORKS_PATH}/libs -L${MY_FRAMEWORKS_PATH}/AsIsLibs -no-canonical-prefixes
LDLIBS+=-lgcc -lc -lm

_SLIBS=$(patsubst %,${MY_FRAMEWORKS_PATH}/libs/lib%.a,$(SLIBS))

all: $(OUTPUT)
ifeq ($(TARGET),NativeActivity)
    ODIR=NAObj
else
    ODIR=obj
endif

OBJ=$(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: ${MY_FRAMEWORKS_PATH}/resources/include/%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.mm
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(_SLIBS):

$(OUTPUT): $(OBJ) $(_SLIBS)
	$(LD) -shared --sysroot $(SYSROOT) $^ $(LDFLAGS) $(LDLIBS) -o $@

clean:
	-rm $(ODIR)/*.o
	-rm $(OUTPUT)

copy:
	cp *.so ${MY_FRAMEWORKS_PATH}/libs
